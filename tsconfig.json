{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "types": ["node", "inquirer"],
      "target": "es2017",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "lib",
      "rootDir": "src",
      "resolveJsonModule": true,
      /* Strict Type-Checking Options */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictPropertyInitialization": false,
    },
    "lib": ["es2015"],
    "exclude": ["node_modules"]
}
